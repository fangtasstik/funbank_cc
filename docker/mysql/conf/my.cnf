# MySQL 8.0 Configuration for Funbank Banking System
# Optimized for banking applications with high transaction volume and data integrity

[mysqld]
# Character set configuration for international banking support
character-set-server=utf8mb4
collation-server=utf8mb4_unicode_ci
default-time-zone='+00:00'

# Performance optimization for banking workloads
innodb_buffer_pool_size=512M
innodb_log_file_size=128M
innodb_flush_log_at_trx_commit=1  # ACID compliance for financial transactions
innodb_doublewrite=1             # Data integrity protection

# Connection and timeout settings
max_connections=200
wait_timeout=28800
interactive_timeout=28800

# Security settings for banking data protection
sql_mode=STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO
local_infile=0                   # Disable local file loading for security

# Logging configuration for audit trails
general_log=1
general_log_file=/var/log/mysql/mysql.log
log_error=/var/log/mysql/error.log
slow_query_log=1
slow_query_log_file=/var/log/mysql/mysql-slow.log
long_query_time=2

# Binary logging for replication and point-in-time recovery
log_bin=mysql-bin
binlog_format=ROW               # Row-based logging for data consistency
expire_logs_days=7

[client]
default-character-set=utf8mb4

[mysql]
default-character-set=utf8mb4